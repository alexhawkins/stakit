$('#js-activities').append('<%= j render @activities %>');
<% if @activities.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @activities %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>

$('#js-activities').append("<%= escape_javascript(render partial: 'activity_feed') %>");
<% if @following_activities.next_page %>
  $('.pagination').replaceWith('<%= escape_javascript( will_paginate(@following_activities)) %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>