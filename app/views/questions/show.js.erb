$('#js-answers').append('<%= j render @answers %>');
<% if @answers.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @answers %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>

$('.supplement-tip').tooltip();
$('.user-popover-with-html').popover({ html : true });

