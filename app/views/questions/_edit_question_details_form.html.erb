<p>
  <%= form_for [@question], remote: true do |f| %>
     <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Add Detail" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update", class: 'btn btn-success' %>
      </div>
  <% end %>
</p>