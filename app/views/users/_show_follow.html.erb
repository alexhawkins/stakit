<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render_profile_avatar_for(@user) %> %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
           <% @users.each do |user| %>
          <%= link_to render_tiny_avatar_for(user), user_path(user) %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
