<%= content_tag :tr, id: "js-stack-supplements-#{stack_supplement.id}" do %>
  <td>
      
    <%= stack_supplement.supplement.name %>
    <%= link_to " ", "#", class: 'glyphicon glyphicon-info-sign supplement-tip', data: { toggle: :tooltip, placement: :right, trigger: 'click hover'}, title: stack_supplement.supplement.tooltip %>
  </td>

  <td>
    <a href="#" data-xeditable="true" data-pk="<%= stack_supplement.id %>" data-model="stack_supplement" data-name="dose" data-url="<%= stack_stack_supplement_path(@stack, stack_supplement) %>" data-title="Adjust your dosage">
      <%= stack_supplement.dose %>
    </a>
  </td>


  <td>
    <a href="#" data-xeditable="true" data-type="select" data-pk="<%= stack_supplement.id %>"data-model="stack_supplement" data-name="frequency_id" data-url="<%= stack_stack_supplement_path(@stack, stack_supplement) %>" data-title="Frequency" data-source="<%= Frequency.to_xeditable %>" data-value="<%= stack_supplement.frequency_id %>" >
      <%= stack_supplement.frequency.value %>
    </a>
  </td>

  <td>
    <%= link_to " ", stack_stack_supplement_path(@stack, stack_supplement), method: :delete, class: 'glyphicon glyphicon-remove-circle supplement-tip', remote: true, data: { confirm: 'Are you sure?' }, toggle: :tooltip, placement: :top, title: 'Delete Supplement' %>
  </td>
<% end %>

