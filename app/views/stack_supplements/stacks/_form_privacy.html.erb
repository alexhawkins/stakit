<%= form_for(stack) do |f| %>
  <% if stack.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(stack.errors.count, "error") %> prohibited this stack from being saved:</h2>

      <ul>
      <% stack.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="btn-group">
       <%= f.label "Public" %>
       <%= f.radio_button :public, true %>
       <%= f.label "Private" %>
       <%= f.radio_button :public, false %>
  </div>

  <% if stack.public?  %>
    <div class="form-group pull-left">
      <%= f.submit "Make this Stack Private", class: 'btn btn-primary' %>
    </div>
  <% else %>
     <div class="form-group pull-left">
      <%= f.submit "Make this Stack Public", class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>