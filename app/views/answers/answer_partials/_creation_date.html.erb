<span>   
    <%= link_to "#{time_ago_in_words(answer.created_at)} ago", question_answer_path(@question, answer), class: 'label label-default' %>
    <!--DELETE BUTTON-->
    <span class="pull-right">
    <% if policy(answer).destroy? %>
      <%= link_to "Edit", edit_question_answer_path(@question, answer),  class: 'label label-success', remote: true %>
      <%= link_to "Delete", question_answer_path(@question, answer), method: :delete, class: 'label label-danger', remote: true, data: { confirm: 'Are you sure?' } %>
    <% end %>
   </span>
</span>
