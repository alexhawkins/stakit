<div class="vote-arrows pull-left">
  <div ><%= link_to " ", question_answer_up_vote_path(question, answer), class: 'glyphicon glyphicon-hand-up', remote: true %></div>
  <strong>
    <%= content_tag :div, id: "answer-points-#{answer.id}" do %>
      <%= answer.points %>
    <% end %>
  </strong>
  <div><%= link_to " ",  question_answer_down_vote_path(question, answer), class: 'glyphicon glyphicon-hand-down', remote: true %></div>
</div>